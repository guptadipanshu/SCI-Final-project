<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_preview2">

    <ImageView
        android:id="@+id/image_view_waveform"
        android:layout_width="114dp"
        android:layout_height="66dp"
        android:layout_x="42dp"
        android:layout_y="115dp"
        
        android:src="@drawable/edit_song_waveform" />

    <Button
        android:id="@+id/edit_song_close"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_x="296dp"
        android:layout_y="67dp"
        android:background="@android:color/transparent" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="270dp"
        android:layout_height="15dp"
        android:layout_x="43dp"
        android:layout_y="190dp" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="207dp"
         android:background="@android:color/transparent"/>

</AbsoluteLayout>
